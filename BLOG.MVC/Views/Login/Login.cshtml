@using System.Web.Optimization
@{
    Layout = null;
}
@using BLOG.DAL.Entities
@model Users 
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin - Start Bootstrap Template</title>
    @Styles.Render("/bundlesLogin/styles")
</head>
<body class="bg-dark">
    <div class="container">
        <span class="alert-danger">@ViewBag.msg</span>
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login</div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>E-posta Adresi:</label>
                        @Html.TextBoxFor(x => x.Email, new { @class="form-control",@type ="email",@placeholder="Epostanızı giriniz."})
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span>
                    </div>
                    <div class="form-group">
                        <label>Şifre:</label>
                        @Html.TextBoxFor(x=> x.Password, new {@class="form-control",@type="pasword",@placeholder="Parola Giriniz." })
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.Password)</span>
                    </div>
                    @*<div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                @Html.CheckBoxFor(x=>x.RememberMe,new { @class = "form-check-input", @type = "checkbox" })Şifreyi hatırla
                            </label>
                        </div>
                    </div>*@

                    <input type="submit" value="Giriş Yap" class="btn btn-primary btn-block" />
                }

                             
                <div class="text-center">
                    <a class="d-block small mt-3" href="/Register/Register">Register an Account</a>
                    <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundlesLogin/scripts")
</body>
</html>
