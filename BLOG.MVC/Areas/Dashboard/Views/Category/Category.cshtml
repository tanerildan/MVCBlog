@using BLOG.DAL.Entities
@model IEnumerable<Category>
@{
    ViewBag.Title = "Category";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutPage.cshtml";
}

<h2>Kategoriler</h2>
<div class="container">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kategori Adı</th>
                <th>Açıklamalar</th>
                <th>Kategori Gönderi sayısı</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.PostCount</td>
                    <td>
                        @*<button class="btn btn-primary">Düzenle</button>*@

                        <a class="btn btn-primary" href="/Dashboard/Category/CategoryUpdate/@item.Id" role="button">Düzenle</a>
                        <a class="btn btn-danger" href="/Dashboard/Category/Sil/@item.Id" role="button">Sil</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <a class="btn btn-primary" href="/Dashboard/Category/CategoryAdd" role="button" > Kategori Ekle</a>

                </tr>
            </thead>

        </table>
    </div>
</div>


