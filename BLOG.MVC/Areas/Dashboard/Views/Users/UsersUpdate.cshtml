@using BLOG.DAL.Entities
@model Users
@{
    ViewBag.Title = "UsersUpdate";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutPage.cshtml";
}

<h2>Kullanıcı ayarları</h2>

<div class="container">
    @if (ViewBag.Msg!=null)
    {
    <span class="alert alert-success">@ViewBag.Msg</span>

    }
    <div class="row">
        <div class="col-md-offset-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.TextBoxFor(x=> x.Name, new { @class="form-control"})
                <span class="text-danger">@Html.ValidationMessageFor(x=> x.Name)</span>

                @Html.TextAreaFor(x => x.LastName, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(x => x.LastName)</span>

                <input class="btn btn-primary" type="submit" name="name" value="İsmi Düzenle" />
            }
        </div>
    </div>
</div>


